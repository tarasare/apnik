{
  "name": "apnik",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "dotenv -e .env.production -- pm2 start dist/main.js --name apnik",
    "stop:prod": "pm2 stop apnik",
    "restart:prod": "pm2 restart apnik",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "docs:code": "typedoc",
    "docs:ui": "compodoc -p tsconfig.json -d docs-system/ui-docs",
    "docs:all": "npm run docs:code && npm run docs:ui",
    "tailwind:build": "@tailwindcss/cli -i ./src/assets/css/tailwind.css -o ./public/css/app.css --minify"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "csurf": "^1.11.0",
    "express-session": "^1.18.2",
    "handlebars": "^4.7.8",
    "hbs": "^4.2.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "nest-winston": "^1.10.2",
    "pg": "^8.17.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.2.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@tailwindcss/cli": "^4.1.18",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.2",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "license-checker": "^25.0.1",
    "pm2": "^6.0.14",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
